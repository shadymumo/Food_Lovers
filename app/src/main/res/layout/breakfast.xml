<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textView_bfFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cvBf"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Pancakes"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/imageView_bfRating"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@id/cvBf"
        android:layout_alignParentStart="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="26dp"
        app:srcCompat="@android:drawable/star_off" />

    <TextView
        android:id="@+id/textView_bfPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cvBf"
        android:layout_alignBaseline="@id/imageView_bfRating"
        android:layout_alignParentStart="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="•  ₹ 150"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textView_bfRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cvBf"
        android:layout_marginStart="1dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/imageView_bfRating"
        android:fontFamily="@font/montserrat_semibold"
        android:text="4.4"
        android:textSize="10sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvBf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/imageView_bfFood"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/load" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>