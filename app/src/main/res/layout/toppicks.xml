<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvTp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/imageView_tpFood"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/load" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView_tpFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cvTp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Pancakes"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView_rating"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@id/cvTp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="26dp"
            app:srcCompat="@android:drawable/star_off" />

        <TextView
            android:id="@+id/textView_tpRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cvTp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/imageView_rating"
            android:fontFamily="@font/montserrat_semibold"
            android:text="4.4"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView_tpPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cvTp"
            android:layout_alignBaseline="@id/imageView_rating"
            android:layout_alignParentStart="true"
            android:layout_marginStart="47dp"
            android:layout_marginTop="22sp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="• ₹ 150"
            android:textSize="10sp" />


    </RelativeLayout>

</RelativeLayout>